{
  "manifest_version": 3,
  "name": "Go Away Ads!",
  "version": "1.0",
  "description": "Blocks ads using CSS. Simple and fast â€” just hide annoying ads!",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
