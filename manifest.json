{
  "manifest_version": 3,
  "name": "Go Away Ads!",
  "version": "1.1",
  "description": "Blocks ads using CSS, JavaScript, and network request rules.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "scripting", "activeTab", "declarativeNetRequest", "declarativeNetRequestFeedback"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
